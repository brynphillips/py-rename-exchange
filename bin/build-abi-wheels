#!/usr/bin/env python3

import os
import pipes
import subprocess
import tempfile


def check_call(*cmd):
    print(
        'build-abi-wheels>> ' +
        ' '.join(pipes.quote(part) for part in cmd),
    )
    subprocess.check_call(cmd)

def main():
    os.makedirs('dist', exist_ok=True)
    with tempfile.TemporaryDirectory() as work:
        pip = '/opt/python/cp39-cp39/bin/pip'
        check_call(
            'podman', 'run', '-ti',
            '--user', '{}:{}'.format(os.getuid(), os.getgid()),
            '-v', '{}:/dist:rw'.format(os.path.abspath('dist')),
            '-v', f'{os.getcwd()}:/src:ro',
            'quay.io/pypa/manylinux2014_x86_64:latest',
            'bash', '-exc',
            '{} wheel --verbose --wheel-dir /tmp --no-deps /src && '
            'auditwheel repair --wheel-dir /dist /tmp/*.whl'.format(pip),

        )
    return 0


if __name__ == '__main__':
    SystemExit(main())
